<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.ctesop.control.RecebimentoController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="36.0" prefWidth="560.0" spacing="5.0">
               <children>
                  <Button fx:id="btnReceber" mnemonicParsing="false" onAction="#receber" prefHeight="50.0" prefWidth="80.0" styleClass="botao-conta" stylesheets="@css/Geral.css" text="Receber">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#cancelar" prefHeight="50.0" prefWidth="80.0" styleClass="botao-cancelar" stylesheets="@css/Geral.css" text="Cancelar">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Label text="Selecione a conta a receber" />
            <TableView fx:id="tbContaReceber" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="tcContaCooperativa" prefWidth="164.0" text="Cooperativa" />
                <TableColumn fx:id="tcContaValor" minWidth="5.0" prefWidth="86.0" text="Valor" />
                  <TableColumn fx:id="tcContaRestante" prefWidth="139.0" text="Valor Restante" />
                  <TableColumn fx:id="tcContaData" prefWidth="88.0" text="Data" />
                  <TableColumn fx:id="tcStatusConta" prefWidth="82.0" text="Status" />
              </columns>
            </TableView>
            <Label text="Selecione a parcela a receber" />
            <TableView fx:id="tbParcelaReceber" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="tcParcelaData" prefWidth="147.0" text="Data" />
                <TableColumn fx:id="tcParcelaValor" prefWidth="150.0" text="Valor" />
                  <TableColumn fx:id="tcParcelaRestante" prefWidth="148.0" text="Restante Parcela" />
                  <TableColumn fx:id="tcStatusParcela" prefWidth="114.0" text="Status" />
              </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
