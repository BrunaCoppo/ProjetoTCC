<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.ctesop.control.ContaReceberController">
   <children>
      <VBox fillWidth="false" prefHeight="200.0" prefWidth="100.0" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="28.0" prefWidth="600.0" spacing="5.0" stylesheets="@css/Geral.css">
               <children>
                  <Button fx:id="btnNovo" mnemonicParsing="false" onAction="#novo" prefHeight="50.0" prefWidth="80.0" styleClass="botao-novo" text="Novo">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnSalvar" mnemonicParsing="false" onAction="#salvar" prefHeight="50.0" prefWidth="80.0" styleClass="botao-salvar" text="Salvar">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#cancelar" prefHeight="50.0" prefWidth="80.0" styleClass="botao-cancelar" stylesheets="@css/Geral.css" text="Cancelar">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label text="Data Receber * ">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Label text="Descrição ">
                     <HBox.margin>
                        <Insets left="180.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox>
               <children>
                  <DatePicker fx:id="dpDataReceber">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </DatePicker>
                  <TextField fx:id="tfDescricao" prefHeight="25.0" prefWidth="219.0">
                     <HBox.margin>
                        <Insets left="90.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Valor *">
                     <HBox.margin>
                        <Insets right="85.0" />
                     </HBox.margin>
                  </Label>
                  <Label text="Quantidade Parecelas* ">
                     <HBox.margin>
                        <Insets left="145.0" />
                     </HBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <TextField fx:id="tfValor" prefHeight="25.0" prefWidth="148.0">
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin></TextField>
                  <TextField fx:id="tfQuantidadeParcela" onAction="#gerarParcela" text="1">
                     <HBox.margin>
                        <Insets left="105.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Status *">
                     <HBox.margin>
                        <Insets right="100.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox>
               <children>
                  <RadioButton fx:id="rbVista" mnemonicParsing="false" selected="true" text="Á Vista">
                     <toggleGroup>
                        <ToggleGroup fx:id="status" />
                     </toggleGroup>
                     <HBox.margin>
                        <Insets left="10.0" right="20.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="rbPrazo" mnemonicParsing="false" text="Á Prazo" toggleGroup="$status">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </RadioButton>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="tbContaReceber" prefHeight="124.0" prefWidth="644.0">
              <columns>
                <TableColumn fx:id="tcCooperativa" prefWidth="198.0" text="Cooperativa" />
                <TableColumn fx:id="tcDataPagamento" prefWidth="145.0" text="Data Pagamento" />
                  <TableColumn fx:id="tcValor" prefWidth="110.0" text="Valor" />
                  <TableColumn fx:id="tcStatus" prefWidth="106.0" text="Status" />
              </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
